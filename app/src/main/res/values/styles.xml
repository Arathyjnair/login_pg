<resources>

    <!-- Base application theme. -->
    <style name="Theme.Shrine" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
        <style parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" name="Widget.Shrine.TextInputLayout"/>


        -<style parent="TextAppearance.MaterialComponents.Subtitle2" name="TextAppearance.Shrine.TextInputLayout.HintText">

        <item name="android:textColor">?android:attr/textColorPrimary</item>

    </style>




        -<style parent="Widget.MaterialComponents.Button.TextButton" name="Widget.Shrine.Button.TextButton">

        <item name="android:textColor">?android:attr/textColorPrimary</item>

    </style>


        -<style parent="Widget.AppCompat.Toolbar" name="Widget.Shrine.Toolbar">

        <item name="android:background">?attr/colorAccent</item>

        <item name="android:theme">@style/Theme.Shrine</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!--<item name="titleTextAppearance">@style/TextAppearance.Shrine.Toolbar</item>-->

    </style>


        <!-- -<style parent="TextAppearance.MaterialComponents.Button" name="TextAppearance.Shrine.Toolbar">-->

        <!--<item name="android:textSize">16sp</item>-->

        <!--</style>-->


        -<style parent="TextAppearance.MaterialComponents.Headline4" name="TextAppearance.Shrine.Title">

        <item name="textAllCaps">true</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textColor">?android:attr/textColorPrimary</item>

    </style>

</resources>